\def\gfncls@sectionstyle#1{%
  {\parbox[c]{\textwidth}{%
    \begin{tikzpicture}
      \draw[line width=1pt] (0,0) -- (0.99\textwidth,0);
      \draw[line width=0.5pt] (0,-3pt) -- (0.99\textwidth,-3pt);
    \end{tikzpicture}\par
    \vspace{-0.75ex}%
    \parbox[c][3ex][c]{0.99\textwidth}{\enskip\textsf{\normalfont\Large\headfont #1}}\par
    \vspace{-0.75ex}%
    \begin{tikzpicture}
      \draw[line width=0.5pt] (0,0) -- (0.99\textwidth,0);
      \draw[line width=1pt] (0,-3pt) -- (0.99\textwidth,-3pt);
    \end{tikzpicture}\par
  }}%
}
\def\gfncls@subsectionstyle#1{%
  {\parbox[c]{\textwidth}{%
    \parbox[c]{0.99\textwidth}{\enskip\textsf{\normalfont\large\headfont #1}}\par
    \vspace{-2ex}%
    \begin{tikzpicture}
      \draw[line width=1pt] (0,0) -- (0.99\textwidth,0);
    \end{tikzpicture}%
  }}%
}
