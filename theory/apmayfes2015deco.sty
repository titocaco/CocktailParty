\newdimen\gfncls@dimen@titleheight
\newdimen\gfncls@dimen@authorheight
\newdimen\gfncls@dimen@textwidth
\def\@maketitle{%
  \setbox0=\hbox{\parbox{0.79\textwidth}{\centering\fontsize{19pt}{25pt}\selectfont \@title \par}}%
  \gfncls@dimen@titleheight=0.75cm\relax
  \advance\gfncls@dimen@titleheight by\ht0\relax
  \advance\gfncls@dimen@titleheight by\dp0\relax
  \setbox1=\hbox{\parbox{0.79\textwidth}{\centering\normalsize\begin{tabular}{l}\@author\end{tabular}\par}}%
  \gfncls@dimen@authorheight=0.5cm\relax
  \advance\gfncls@dimen@authorheight by\ht1\relax
  \advance\gfncls@dimen@authorheight by\dp1\relax
  \newpage%\null
  \par\vskip -6em\relax
  \begin{center}
    \begin{tikzpicture}
      \draw [line width=2pt, double distance=2pt]
           (-0.4\textwidth, \gfncls@dimen@titleheight) rectangle (0.4\textwidth, -\gfncls@dimen@authorheight);
      \draw (0, 0.5\gfncls@dimen@titleheight) node {%
        \parbox[c]{0.79\textwidth}{\copy0}%
      };
      \draw (0, -0.5\gfncls@dimen@authorheight) node {%
        \parbox[c]{0.79\textwidth}{\copy1}%
      };
      \draw (-0.3\textwidth, 0) -- (0.3\textwidth, 0);
    \end{tikzpicture}
  \end{center}
  \ifvoid\@abstractbox\else\centerline{\box\@abstractbox}\vskip1.5em\fi
}
